def background_content(
	title,
	quote,
	overview_paras,
	applicable_intro,
	applicable_items,  # list of (label, explanation)
	skills,
	tools,
	languages,
	equipment_items,
	feature_name,
	feature_desc,
	traits, ideals, bonds, flaws,
	gm_notes,
	related_paths
):
	parts = []
	parts.append(f"<h1>{title}</h1>\n")
	parts.append("<blockquote>\n<p><em>\"" + quote + "\"</em></p>\n</blockquote>\n")
	parts.append("<h2>Overview</h2>")
	for p in overview_paras:
		parts.append(f"<p>{p}</p>")
	parts.append("\n<h2>Applicable Races</h2>")
	parts.append(f"<p>{applicable_intro}</p>")
	parts.append("<ul>")
	for lab, exp in applicable_items:
		parts.append(f"<li><strong>{lab}:</strong> {exp}</li>")
	parts.append("</ul>\n")
	parts.append("<h2>Skill Proficiencies</h2>")
	parts.append(f"<p>{skills}</p>\n")
	parts.append("<h2>Tool Proficiencies</h2>")
	parts.append(f"<p>{tools}</p>\n")
	parts.append("<h2>Languages</h2>")
	parts.append(f"<p>{languages}</p>\n")
	parts.append("<h2>Equipment</h2>")
	parts.append("<p>You start with the following equipment:</p>")
	parts.append("<ul>")
	for it in equipment_items:
		parts.append(f"<li>{it}</li>")
	parts.append("</ul>\n")
	parts.append(f"<h2>Feature: {feature_name}</h2>")
	parts.append(f"<p>{feature_desc}</p>\n")
	parts.append("<h2>Suggested Characteristics</h2>")
	parts.append("<p>People who lived this life often carry it in their habits, loyalties, and blind spots.</p>\n")
	parts.append("<h3>Personality Traits</h3>")
	parts.append(dtable("d8", "Personality Trait", traits) + "\n")
	parts.append("<h3>Ideals</h3>")
	parts.append(dtable("d6", "Ideal", ideals_rows(ideals)) + "\n")
	parts.append("<h3>Bonds</h3>")
	parts.append(dtable("d6", "Bond", bonds) + "\n")
	parts.append("<h3>Flaws</h3>")
	parts.append(dtable("d6", "Flaw", flaws) + "\n")
	parts.append("<h2>GM Notes</h2>")
	parts.append(f"<p>{gm_notes}</p>\n")
	parts.append(related_entries_html(related_paths))
	return "\n".join(parts)

LAST_MODIFIED = "2025-12-30T00:00:00Z"

def make_entry(slug, title, **kwargs):
	key = f"character/backgrounds/{slug}"
	content = background_content(title=title, **kwargs)
	return key, {
		"id": key,
		"title": title,
		"category": ["Character", "Backgrounds"],
		"content": content,
		"related": kwargs["related_paths"],
		"tags": kwargs["tags"],
		"applicableRaces": kwargs["applicableRaces"],
		"lastModified": LAST_MODIFIED
	}

